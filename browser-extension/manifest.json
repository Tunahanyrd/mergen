{
  "manifest_version": 3,
  "name": "Mergen Download Manager",
  "version": "0.8.0",
  "description": "Capture downloads and streams (HLS/DASH) with Mergen. Multi-threaded downloads with browser integration.",
  "author": "Tunahanyrd",
  "homepage_url": "https://github.com/Tunahanyrd/mergen",
  "permissions": [
    "downloads",
    "nativeMessaging",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Mergen Download Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mergen@tunahanyrd.com",
      "strict_min_version": "109.0"
    }
  }
}