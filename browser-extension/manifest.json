{
  "manifest_version": 3,
  "name": "Mergen Browser Integration",
  "version": "0.9.6",
  "description": "Send web videos to Mergen download manager",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Download with Mergen"
  }
}